<form action="<%= cat_rental_requests_url %>" method="post" accept-charset="utf-8">
	<% @cat_request.errors.full_messages.each do |msg| %>
	      <p><%= msg %></p>
	  <% end %>


	<select name= "cat_rental_request[cat_id]" >
		<option type="hidden"></option>
		<% @cats.each do |cat| %>
		<option value= "<%= cat.id%>"><%= cat.name %></option>
		<%end%>
	<select>

	<label for="cat_start_date">Start date</label>
	<input name="cat_rental_request[start_date]" id="cat_start_date" type="date" 		value="<%= @cat_request.start_date %>"/>
	<label for="cat_end_date">End date</label>
	<input name="cat_rental_request[end_date]" id="cat_end_date" type="date" 		value="<%= @cat_request.end_date %>"/>

		<input type="submit" />
</form>